<body>

  <!-- ======= Top Bar ======= -->
  <div id="topbar" class="d-none d-lg-flex align-items-center fixed-top">
    <div class="container d-flex">
      <div class="contact-info mr-auto">
        <i class="icofont-envelope"></i> <a href="mailto:help@police.com">help@police.com</a>
        <i class="icofont-phone"></i> +1 5589 55488 55
      </div>
      <div class="social-links">
        <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
        <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
        <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
        <a href="#" class="skype"><i class="icofont-skype"></i></a>
        <a href="#" class="linkedin"><i class="icofont-linkedin"></i></i></a>
      </div>
    </div>
  </div>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">

      <h1 class="logo mr-auto"><a href="/">FindMyPolice</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a href="index.html">Home</a></li>
          <li><a href="#about">About</a></li>
          <li class="drop-down"><a href="">Complaints</a>
            <ul>
              <li><a href="/user/complaints/view/<%=user_id%>">View all complaints</a></li>
              <li><a href="/user/complaints/post/<%=user_id%>">Post a complaint</a></li>

            </ul>
          </li>
          <li><a href="/user/policeStation/<%=user_id%>">Nearest Police Station</a></li>

          <li><a href="/user/profile/view/<%=user_id%>">My profile</a></li>

        </ul>
      </nav><!-- .nav-menu -->

      <a href="/user/logout" class="get-started-btn scrollto">Logout</a>

    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>All Complaints</h2>
          <ol>
            <li><a href="index.html">Home</a></li>
            <li>Complaints</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
      <div class="container">
        <div style="padding: 30px">
          <ul style="border:3px solid #1e2a96;  ">
            <% if (typeof errors !='undefined' ) { %>
              <% errors.forEach(error=> { %>
                <h5 style="text-align:center;color:<%=color%>;margin:10px;"><strong>
                    <%= error.message %> <a href="/user/complaints/view/resolved/<%=user_id%>"><span
                          style="color: #1e2a96">: click here to view them</span></a>
                  </strong></h5>
                <% }) %>
                  <% } %>
          </ul>
        </div>
        <div class="row searchFilter">
          <div class="form group">
            <form action="/user/complaints/view/filter/<%=user_id%>" method="POST">
              <div class="input-group ml-5">
                <input class="form-control" list="distance" name="distance" placeholder="Select the distance(km)">
                <datalist id="distance">
                  <option value="1"></option>
                  <option value="3"></option>
                  <option value="5"></option>
                  <option value="7"></option>
                  <option value="10"></option>
                  <option value="12"></option>
                  <option value="50"></option>
                </datalist>

                <button id="searchBtn" type="submit" class="btn btn-secondary btn-search ml-1"
                  style="background-color: #1e2a96"> Search</button>
            </form>
          </div>
        </div>
      </div>

      <div class="container">
        <% complaints.forEach((complaint)=>{ %>
          <h6 class="blog-post__title" style="color: #37b3b8;">Description: </h6>
          <div style="margin-bottom: 20px;">
            <h4>
              <%= complaint.description %>
            </h4>

            <div class="blog-post__info">
              <div>
                <span>
                  <h6 class="blog-post__title" style="color: #37b3b8;">Posted on: </h6>
                  <%=complaint.date.toString().substring(0,15)%>, <%if (complaint.time!=undefined) {%>
                      <%=complaint.time.toString()%>
                        <%} %>
                </span>
                <span></span>
              </div>
              <h6 class="blog-post__title" style="color: #37b3b8;">Pincode:</h6>
              <p class="blog-post__text">
                <%=complaint.pincode%>
              </p>
              <hr>
            </div>
          </div>
          <% })%>

      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container">
      <h3>FindMyPolice</h3>
      <div class="social-links">
        <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
        <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
        <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
        <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
        <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
      </div>
      <div class="copyright">
        &copy; Copyright <strong><span>Police Station</span></strong>. All Rights Reserved
      </div>
    </div>
